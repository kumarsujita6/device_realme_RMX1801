<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="graphics"
        android:title="@string/display_title">

        <Preference
            android:key="kcal"
            android:title="@string/display_color_calibration"
            android:summary="@string/set_color_using_kcal"
            android:persistent="false"
            android:icon="@drawable/ic_kcal" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetClass="com.realme.realmeparts.kcal.KCalSettingsActivity"
                android:targetPackage="com.realme.realmeparts.kcal" />
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="spectrum_profile"
        android:title="@string/performance">

         <com.realme.realmeparts.preference.SpectrumPreference
            android:defaultValue="0"
            android:dialogTitle="@string/spectrum_dialogTitle"
            android:entries="@array/spectrum_profiles"
            android:entryValues="@array/spectrum_values"
            android:key="spectrum"
            android:summary="@string/spectrum_summary"
            android:title="@string/spectrum_title"
            android:icon="@drawable/ic_spectrum" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_sound">
        <com.realme.realmeparts.preferences.SecureSettingCustomSeekBarPreference
            android:defaultValue="4"
            android:key="headphone_gain"
            android:max="20"
            app:min="-40"
            android:title="@string/headphone_gain"
            android:icon="@drawable/ic_headphone" />

        <com.realme.realmeparts.preferences.SecureSettingCustomSeekBarPreference
            android:defaultValue="0"
            android:key="microphone_gain"
            android:max="20"
            app:min="-10"
            android:title="@string/microphone_gain"
            android:icon="@drawable/ic_microphone" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/category_vibrator">
        <com.realme.realmeparts.VibratorStrengthPreference
            android:key="vib_strength"
            android:title="@string/vib_strength_title_head"
            android:summary="@string/vib_strength_summary_head"
            android:icon="@drawable/ic_vibrator" />
    </PreferenceCategory>

</PreferenceScreen>
